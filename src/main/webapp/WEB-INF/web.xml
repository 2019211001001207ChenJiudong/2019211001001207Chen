<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <listener>
        <listener-class>com.ChenJiudong.week6.demo.JdbcServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LifeServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week3.demo.LifeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HttpServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week2.demo.HttpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week4.demo.JDBCDemoServlet</servlet-class>
    </servlet>
   <servlet>
       <servlet-name>ConfigDemoServlet</servlet-name>
       <servlet-class> com.ChenJiudong.week4.demo.ConfigDemoServlet</servlet-class>
   </servlet>
    <servlet>
        <servlet-name>RedirectServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week6.demo.RedirectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week6.demo.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week5.demo.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RedirectServlet</servlet-name>
        <url-pattern>re</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>se</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>HttpServlet</servlet-name>
        <url-pattern>/hi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeServlet</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>

        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>name</param-name>
        <param-value>chenjiudong</param-value>
    </context-param>
    <context-param>
        <param-name>student-id</param-name>
        <param-value>2019211001001207</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost;databaseName=userdb;</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>123456</param-value>
    </context-param>

</web-app>