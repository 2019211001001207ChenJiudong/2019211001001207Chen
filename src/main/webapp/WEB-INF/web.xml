<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>chen</servlet-name>
        <servlet-class>com.chenjiudong.week2.demo.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week3.demo.LifeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HttpServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week2.demo.HttpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <servlet-class>com.ChenJiudong.week4.demo.JDBCDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>chen</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HttpServlet</servlet-name>
        <url-pattern>/hi</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LifeServlet</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>

        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost;databaseName=userdb;</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>123456</param-value>
    </context-param>

</web-app>